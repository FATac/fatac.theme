<tal:rep tal:repeat="dades_objecte view/dades_genericview_header">
    <div class="genericview_hover_cerca" tal:condition="dades_objecte" tal:attributes="id dades_objecte/id">
        <a tal:attributes="href string:${here/portal_url}/genericView?idobjecte=${dades_objecte/id}">
            <img class="miniatura_objecte" 
                    tal:attributes="src dades_objecte/thumbnail_objecte; alt dades_objecte/titol; align string:middle" /><br/>
            <div class="hover_miniatura_classe">
            	<img class="miniatura_classe" tal:attributes="src dades_objecte/thumbnail_classe" />
            </div>
            <tal:rep tal:repeat="dada dades_objecte/dades_header">
                <b metal:use-macro="context/macro_dades/macros/dadaObjecte">x</b><br/>
            </tal:rep>
        </a>
    </div>
</tal:rep>