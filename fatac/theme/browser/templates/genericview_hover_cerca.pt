<tal:rep tal:repeat="dades_objecte view/dades_genericview_header">
    <div class="genericview genericview_hover_cerca" tal:condition="dades_objecte" tal:attributes="id dades_objecte/id">
        <a class="georgia11c999999" tal:attributes="href string:${here/portal_url}/genericView?idobjecte=${dades_objecte/id}">
            <img class="miniatura_objecte"
                    tal:attributes="src dades_objecte/thumbnail_objecte; alt dades_objecte/titol; align string:middle" /><br/>
            <div class="hover_miniatura_classe">
            	<img class="miniatura_classe" tal:attributes="src dades_objecte/thumbnail_classe" />
            </div>
            <span class="titol georgia13c000000italic" tal:content="dades_objecte/titol" /><br/>
            <tal:rep tal:repeat="dada dades_objecte/dades_header">
                <!-- condició afegida xq ja no volen les dades genèriques, i cal pintar el títol diferent -->
                <tal:co tal:condition="python: dada['valor'] != dades_objecte['titol']">
                    <b metal:use-macro="context/macro_dades/macros/dadaObjecte">x</b><br/>
                </tal:co>
            </tal:rep>
        </a>
    </div>
</tal:rep>











