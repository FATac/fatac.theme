<tal:rep tal:repeat="dades_objecte view/dades_genericview_header">
    <div class="genericview_fitxa_home addPlaylistParent" tal:condition="dades_objecte" tal:attributes="id dades_objecte/id">
        <tal:cond tal:condition="dades_objecte">
            <a href="#" tal:attributes="href string:${context/portal_url}/genericView?idobjecte=${dades_objecte/id}">
                <div class="imatge">
                    <img class="miniatura_objecte"
                         tal:attributes="src dades_objecte/thumbnail_objecte; alt dades_objecte/titol" />
                </div>
            </a>
            <div class="dades">
                <a href="#" tal:attributes="href string:${context/portal_url}/genericView?idobjecte=${dades_objecte/id}">
                    <img class="miniatura_classe" tal:attributes="src dades_objecte/thumbnail_classe" />
                    <div class="visualClear"><!--  --></div>
                    <tal:rep tal:repeat="dada dades_objecte/dades_header">
                        <b metal:use-macro="context/macro_dades/macros/dadaObjecte">x</b>
                    </tal:rep>
                </a>
                <tal:co tal:define="isanon context/@@plone_portal_state/anonymous"
                        tal:condition="not: isanon">
                    <img class="addPlaylist" tal:attributes="rel dades_objecte/id" src="++resource++fatac.content/images/add_playlist.png" />
                </tal:co>
            </div>
        </tal:cond>
    </div>
</tal:rep>

<script type="text/javascript">
    addPlaylistMenu();
</script>