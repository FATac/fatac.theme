<script type="text/javascript">
    $(document).ready(function() {
        crea_scrolls_verticals();
    });
</script>
<div class="row column-results">
    <tal:rep tal:repeat="column view/getColumns">
        <div class="span5">
            <div tal:content="column/title" class="arial15c666666">[Column title]</div>
            <div class="slider_vertical">
                <div class="div_interior">
                    <ul>
                        <tal:rep tal:repeat="dades_objecte column/content">
                            <tal:cond tal:condition="dades_objecte" tal:attributes="id string:div${dades_objecte/id}">
                                    <li>
                                        <a href="#" tal:attributes="href string:${context/portal_url}/genericView?idobjecte=${dades_objecte/id}"
                                            tal:content="dades_objecte/name">
                                        </a>
                                    </li>
                            </tal:cond>
                        </tal:rep>
                    </ul>
                </div>
            </div>
        </div>
    </tal:rep>
</div>

