        <script src="++resource++fatac.theme.javascripts/screenfull.min.js"></script>
        <script src="++resource++fatac.theme.javascripts/jquery.mousewheel.js"></script>
        <script src="++resource++fatac.theme.javascripts/jquery.scrollpane.js"></script>
        <script src="++resource++fatac.theme.javascripts/hogan.js"></script>
        <script src="++resource++fatac.theme.javascripts/book.templates.js"></script>
