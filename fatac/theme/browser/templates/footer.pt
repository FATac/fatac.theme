            <div id="participants">
                <span i18n:translate="participants">Participants:</span><br/>
                <a href="" i18n:attributes="title participants1">
                    <img i18n:attributes="alt participants1" src="++resource++fatac.theme.images/participants1.png" />
                </a>
                <a href="" i18n:attributes="title participants2">
