                    <img i18n:attributes="alt collaboracio1" src="++resource++fatac.theme.images/collaboracio1.png" />
                </a>
            </div>
        </div>
    </tal:root>

    <tal:noroot tal:condition="not:view/isRoot">
        <img id="logo_peu" tal:attributes="alt view/titolPortal" src="++resource++fatac.theme.images/fatac.png" />
