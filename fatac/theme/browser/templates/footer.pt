        <!-- TODO: unificar amb es links de sota, que són els mateixos (no fet per falta de temps) -->
        <div id="links" class="georgia11c999999">
            <tal:co tal:condition="linkabout">
                <a class="georgia11c999999" tal:attributes="href linkabout/enllac; title linkabout/descripcio" tal:content="linkabout/titol" /> |
            </tal:co>
            <tal:co tal:condition="linkcomfunciona">
                <a class="georgia11c999999" tal:attributes="href linkcomfunciona/enllac; title linkcomfunciona/descripcio" tal:content="linkcomfunciona/titol" /> |
